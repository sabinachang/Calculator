<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#474646"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/expressionTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="@android:color/darker_gray"
            android:maxLength="16"
            android:textSize="20sp"
            tools:text="1+3+5*7"
            android:gravity="bottom|end"/>

        <TextView
            android:id="@+id/answerTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:background="@android:color/darker_gray"
            android:gravity="bottom|end"
            android:maxLength="16"
            android:textAllCaps="false"
            android:textColor="@android:color/background_light"
            android:textSize="45sp"
            tools:text="3.142344" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/btnReset"
                android:text="c"
                style="@style/buttonStyle"
                android:background="@drawable/btn_reset"/>
            <Button
                android:id="@+id/btnChangesign"
                android:text="_"
                style="@style/buttonStyle"
                android:background="@drawable/btn_changesign"/>
            <Button
                android:id="@+id/btnPercent"
                android:text="%"
                style="@style/buttonStyle"
                android:background="@drawable/btn_percent"/>
            <Button
                android:id="@+id/btnDivide"
                android:text="รท"
                style="@style/buttonStyle"
                android:background="@drawable/btn_divide"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/btnSeven"
                android:text="7"
                style="@style/buttonStyle"
                android:background="@drawable/btn_seven"/>
            <Button
                android:id="@+id/btnEight"
                android:text="8"
                style="@style/buttonStyle"
                android:background="@drawable/btn_eight"/>
            <Button
                android:id="@+id/btnNine"
                android:text="9"
                style="@style/buttonStyle"
                android:background="@drawable/btn_nine"/>
            <Button
                android:id="@+id/btnTime"
                android:text="*"
                style="@style/buttonStyle"
                android:background="@drawable/btn_time"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/btnFour"
                android:text="4"
                style="@style/buttonStyle"
                android:background="@drawable/btn_four"/>
            <Button
                android:id="@+id/btnFive"
                android:text="5"
                style="@style/buttonStyle"
                android:background="@drawable/btn_five"/>
            <Button
                android:id="@+id/btnSix"
                android:text="6"
                style="@style/buttonStyle"
                android:background="@drawable/btn_six"/>
            <Button
                android:id="@+id/btnMinus"
                android:text="-"
                style="@style/buttonStyle"
                android:background="@drawable/btn_minus"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnOne"
                style="@style/buttonStyle"
                android:background="@drawable/btn_one"
                android:text="1"
                />
            <Button
                android:id="@+id/btnTwo"
                android:text="2"
                style="@style/buttonStyle"
                android:background="@drawable/btn_two"/>
            <Button
                android:id="@+id/btnThree"
                android:text="3"
                style="@style/buttonStyle"
                android:background="@drawable/btn_three"/>
            <Button
                android:id="@+id/btnPlus"
                android:text="+"
                style="@style/buttonStyle"
                android:background="@drawable/btn_plus"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/btnZero"
                android:text="0"
                style="@style/buttonStyle"
                android:background="@drawable/btn_zero"/>
            <Button
                android:id="@+id/btnPoint"
                android:text="."
                style="@style/buttonStyle"
                android:background="@drawable/btn_point"/>
            <Button
                android:id="@+id/btnEqual"
                android:text="="
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="30sp"
                android:background="@drawable/btn_equals"
                android:textColor="@android:color/transparent" />

        </LinearLayout>

    </LinearLayout>




</RelativeLayout>